@model Reminder.Models.DBEntities.ResendEmailVerificationDto
@{
    ViewData["Title"] = "Resend Email Verification";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="fas fa-envelope me-2"></i>Resend Email Verification
                    </h3>
                    <p class="mb-0 mt-2">Enter your email to receive a new verification link</p>
                </div>
                <div class="card-body p-4">
                    @if (ViewData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Success!</strong> @ViewData["SuccessMessage"]
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Error!</strong> Please check the errors below.
                        </div>
                    }

                    <form asp-action="ResendEmailVerification" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <input asp-for="Email" type="email" class="form-control" 
                                   placeholder="Enter your email address" required>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-info btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Resend Verification Email
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Back to Login
                        </a>
                    </div>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="mb-0">
                        Don't have an account? 
                        <a asp-action="Register" class="text-decoration-none fw-bold">
                            <i class="fas fa-user-plus me-1"></i>Sign Up
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 